<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<div>
	<h4>Title</h4>
	<%= f.text_field :title %>
</div>
<div>
	<h4>Body</h4>
	<%=f.text_area :body %>
</div>
<div>
<%= f.submit 'Update Book' %>
</div>
<div>
<%= link_to'Edit',edit_book_path %>
|<%= link_to'Back',new_book_path %>
</div>
<% end %>
