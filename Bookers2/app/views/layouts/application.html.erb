<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Bootstrap読み込み -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
           <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <li><%= link_to ' Home',user_path(current_user.id), class: "glyphicon glyphicon-home home" %></li>
              <li><%= link_to ' Users',users_path, class: "glyphicon glyphicon-user users" %></li>
              <li><%= link_to ' Books', books_path, class: "glyphicon glyphicon-book books" %></li>
              <li><%= link_to " logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %></li>
              <!-- ログイン後↑ -->
              <% else %>
              <!-- ログイン前↓ -->
              <li><%= link_to ' Home', "/", class: "glyphicon glyphicon-home home" %></li>
              <li><%=link_to'About',homes_about_path,class: "glyphicon glyphicon-link about" %></li>
              <li><%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></li>
              <li><%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sing_in" %></li>
              <% end %>
          </ul>
        </nav>
      </div>
      </header>
      <!-- フラッシュメッセージ -->
       <% flash.each do |key, value| %>
          <div style="color:green">
             <%= content_tag(:div, value, class: "#{key}") %>
          </div>
        <% end %>
      <%= yield %>
  </body>
</html>

