<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div>
		<div class="body">
			<div class="container">
				<div class="row">
					<%= render 'books/list', book: @book, user: @user %>
					<div class="col-xs-9">
						<table class="table table-striped">
							<h1>users</h1>
							<thead>
								<tr>
									<th>image</th>
									<th>name</th>
									<th>show</th>
								</tr>
							</thead>
							<tbody>
								 <% @users.each do |user| %>
								<tr>
									<td><%= attachment_image_tag user, :image, :fill, 50, 50, format: 'jpeg', class: "img-square  profile-img user_image",fallback: "no_image.jpg" %></td>
									<td><%= user.name %></td>
									<td><%= link_to"show", user_path(user.id), class: "user_#{user.id}" %></td>
								</tr>
								<% end %>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<%= render 'books/footer' %>
</body>
</html>
