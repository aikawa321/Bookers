<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<div class="body">
		<div class="container">
			<div class="row">
				<h2>User info</h2>
				<div>
				<%= form_for(@user) do |f| %>
				<% if @user.errors.any? %>
						<div id="error_explanation">
						<h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
							<ul>
								<% @user.errors.full_messages.each do |message|%>
								<li><%= message %></li>
							<% end %>
							</ul>
						</div>
					<% end %>
					<div class="field">
						<label>Name</label>
					<%= f.text_field :name,autofocus: true, class: "name" %>
					</div>
					<div class="field">
						<%= f.attachment_field :image, class: "user_image" %>
					</div>
					<div class="field">
						<label>Introduction</label>
					<%= f.text_area :introduction,autofocus: true, class: "introduction" %>
					</div>
					<div class="actions">
						<%= f.submit "Update User" %>
					</div>
				<% end %>
				</div>
			</div>
		</div>
	</div>
	<%= render 'books/footer' %>
</body>
</html>