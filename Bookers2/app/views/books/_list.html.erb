<div class="col-xs-3">
		<% if flash[:notice] %>
 		 <p style="color:green;"><%= flash[:notice] %></p>
		<% end %>
					<% if book.errors.any? %>
					<div id="error_explanation">
						<h2><%= book.errors.count %>errors prohibited this obj from being saved:</h2>
						<ul>
							<% book.errors.full_messages.each do |message|%>
							<li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>
                <!-- user info -->
				<h2>User info</h2>
				<div>
					<%= attachment_image_tag user, :image, :fill, 80, 80, format: 'jpeg', class: "img-square  profile-img", fallback: "no_image.jpg" %>
				</div>
				<table class="table">
					<thead>
						<tr></tr>
						<tr>
							<th>Name:</th>
							<th><%= user.name %><th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th>Introduction:</th>
							<th><%= user.introduction %></th>
						</tr>
					</tbody>
				</table>
				<%if @user == current_user %>
				<div>
					<%= link_to"",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
				</div>
				<% else %>
				<%= link_to"",user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
			<% end %>
                 <!-- user info -->
                <!-- bookの投稿form -->
				<%= form_for(book) do |f| %>
					
				<div class="col-xs-12">
					<h2>NEW BOOK</h2>
				</div>
				<div>
					<div class="field row">
						 <label>Title</label>
						<%=f.text_field :title, class: "book_title col-xs-12" %>
					</div>
				</div>
				<div>
					<div class="field row">
						<label>Opinion</label>
						<%= f.text_area :opinion, class: "book_body col-xs-12" %>
					</div>
				</div>
				<div class="action row">
					<%= f.submit "Create Book",class: "btn btn-default col-xs-12 btn-primary" %>
				</div>

				<% end %>
				<!-- form -->
</div>